{
  "name": "ludumjs",
  "version": "2.0.0",
  "description": "Small framework helping to create board games",
  "main": "index.js",
  "author": "Adrien Gu√©ret",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/adrien-gueret/ludumjs.git"
  },
  "scripts": {
    "build:client": "tsc -p tsconfig.client.json",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "typescript": "^2.8.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "../tsconfig.client.json"
      }
    },
    "rootDir": "src",
    "coverageDirectory": "../coverage",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
